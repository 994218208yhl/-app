<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.liuzozo.stepdemo.ui.RoundImageView
        android:id="@+id/account_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/man_pic" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Olivia"
            android:textColor="#666666"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#90ffffff"
            android:orientation="horizontal">

            <!--第一个-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/plan_setting_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/account_plan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="PLAN"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#666666"/>
            </LinearLayout>

            <!--第二个-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/week_record_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/account_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="DATA"
                    android:textColor="#666666"/>

            </LinearLayout>

            <!--第三个-->
            <LinearLayout
                android:id="@+id/talk_id"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/account_talk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="TALK" />

            </LinearLayout>

        </LinearLayout>
        <!--如果下面还有的话可以继续在下面添加-->


    <View  android:layout_height="1.5px"
        android:layout_width="match_parent"
        android:background="#95ffffff" />

    <LinearLayout
        android:id="@+id/ll_account_slogan"
        android:layout_width="302dp"
        android:layout_height="84dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/slogan"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
           android:layout_gravity="center_horizontal"
            android:paddingHorizontal="15dp"
            android:text="点击设置标语"
            android:textSize="15sp"
            android:textColor="#666666"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_data"
        android:layout_width="302dp"
        android:layout_height="84dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mydata"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/account_height"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="47dp"
                android:text="165.0 cm"
                android:textColor="#666666"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_weight"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="33dp"
                android:text="55.0 kg"
                android:textColor="#666666"
                android:textSize="15sp"
                android:textStyle="bold" />

            />

            <TextView
                android:id="@+id/account_BMI"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:text="20.2"
                android:textColor="#666666"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
